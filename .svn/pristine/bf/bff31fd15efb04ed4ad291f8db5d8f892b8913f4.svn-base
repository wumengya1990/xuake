/*计划管理布局*/
.planning-left{
	width:570px;
	float:left;
}
.planning-right{
	position:absolute;
	right:0;
	top:0;
	bottom:0;
	left:570px;
	overflow:hidden;
	border-left:1px solid #E5E5E5;
}
/*日历*/
.calendar-main{
	width:550px;
	padding:10px;
}
.calendar-month{
	height:50px;
	padding:0 5px;
	position:relative;
}
.calendar-month .cm-icon-btn{
	width:40px;
	height:40px;
	font-size:18px;
	text-align:center;
	border-radius:40px;
	-webkit-border-radius:40px;
	-moz-border-radius:40px;
	margin-top:5px;
	cursor:pointer;
	background-color:#FFFFFF;
}
.calendar-month .cm-icon-btn i{
	font-size:16px;
	line-height:40px;
}
.calendar-month .cm-icon-btn:hover{
	background-color:#EEEEEE;
}
.calendar-month .cm-icon-btn:active{
	background-color:#F7F7F7
}
.calendar-month .cm-content{
	position:absolute;
	top:0;
	left:45px;
	right:45px;
	line-height:50px;
	font-size:18px;
	text-align:center;
	color:#333333;
	
}
.calendar-week{
	height:50px;
	position:relative;
	background-color:#FAFAFA;
/*	border-bottom:1px solid #E5E5E5;*/
}
.calendar-week li{
	width:14.28%;
	height:50px;
	line-height:50px;
	float:left;
	text-align:center;
	font-size:16px;
	color:#333333;
}
.calendar-days li{
	width:14.28%;
	padding-top:14.28%;
	position:relative;
	float:left;
}
.calendar-days li .calendar-day-one{
	position:absolute;
	top:50%;
	left:50%;
	margin-top:-25px;
	margin-left:-25px;
	width:50px;
	height:50px;
	line-height:50px;
	z-index:1;
	text-align:center;
	font-size:20px;
	cursor:pointer;
	background-color:#F9F9F9;
	color:#666666;
}
.calendar-days li .calendar-day-one:hover{
	background-color:#EEEEEE;
}
.calendar-days li .calendar-day-one.previous{
	background-color:#FFFFFF;
	color:#999999;
}
.calendar-days li .calendar-day-one.previous:hover{
	background-color:#EEEEEE;
}
.calendar-days li .calendar-day-one.selected{
	background-color:#0091E8;
	color:#FFFFFF;
}
.calendar-days li .calendar-day-one.selected:hover{
	background-color:#0083d2;
}
.calendar-days li .calendar-day-one.today{
	background-color:#00ad00;
	color:#FFFFFF;
}
.calendar-days li .calendar-day-one.today:hover{
	background-color:#009000;
}
.calendar-days li .calendar-day-one.on{
	background-color:#ffeea0;
	color:#666666;
}
.calendar-days li .calendar-day-one.on:hover{
	background-color:#ffeea0;
}

/*计划时间标题*/
.planning-title{
	padding:10px;
	overflow:hidden;
	background-color:#fcfcfc;
	border-bottom:1px solid #E5E5E5;
}
.planning-title h3{
	float:left;
	height:32px;
	line-height:32px;
	font-size:16px;
	font-weight:normal;
	color:#333333;
}
.planning-title input{
	float:right;
}
.planning-tab-main{
	position:absolute;
	left:0;
	top:53px;
	bottom:0;
	width:60px;
	text-align:center;
	background-color:#F5F5F5;
}
.planning-tab{
	width:20px;
	font-size:16px;
	padding:15px 20px;
	cursor:pointer;
	line-height:20px;
}
.planning-tab.on{
	background-color:#FFFFFF;
	color:#FF4400;
}
.planning-content{
	position:absolute;
	right:0;
	top:53px;
	bottom:0;
	left:60px;
}
.planning-content .pc-question-info{
	height:50px;
	line-height:50px;
	text-align:center;
	color:#999999;
}
.planning-content .pc-question-info em{
	padding:0 5px;
	color:#FF4400;
}
.planning-content .pc-content{
	position:absolute;
	right:0px;
	top:50px;
	bottom:0;
	left:0;
	padding:0 15px 15px;
}
.question-one{
	margin-bottom:15px;
	border:1px solid #EEEEEE;
}
.question-one:last-child{
	margin-bottom:0;
}
.question-one .qo-number{
	height:30px;
	line-height:30px;
	margin-left:10px;
	float:left;
	line-height:28px;
	font-size:16px;
	color:#007fcc;
}
.question-one .qo-right{
	overflow:hidden;
	padding:15px;
	line-height:24px;
}
.question-one .qo-question-title{
	font-size:16px;
	color:#333333;
}
.question-one .qo-question-content{
	margin-top:5px;
	line-height:22px;
	padding-bottom:15px;
}
.question-one .qo-answer-list li{
	overflow:hidden;
	line-height:22px;
	padding:5px 0;
}
.question-one .qo-answer-list .qo-answer-left{
	float:left;
	text-align:center;
	margin-right:5px;
}
.question-one .qo-answer-list .qo-answer-right{
	overflow:hidden;
}
.question-one .qo-tools{
	padding:5px;
	text-align:right;
	background-color:#FCFCFC;
	border-bottom:1px dotted #E5E5E5;
}
.question-one .qo-tools input{
	height:28px;
	line-height:28px;
}
.question-one .qo-answer-txt{
	margin-top:15px;
	color:#090;
}

/*题库管理*/
.question-bank-main{
	position:absolute;
	top:62px;
	bottom:61px;
	left:0px;
	right:0px;
	padding:0 15px;
}
.question-bank-page{
	position:absolute;
	bottom:0px;
	left:0px;
	right:0px;
	padding:15px 20px;
}

/*题目选项*/
.question-option-main{
	margin-top:10px;
}
.question-option-main h3{
	font-weight:normal;
}
.question-option-title{
	float:left;
	height:42px;
	line-height:42px;
}
.question-option-list li{
	position:relative;
	margin-bottom:10px;
	width:94%;
	box-sizing:border-box;
	-moz-box-sizing:border-box;
	-webkit-box-sizing:border-box;
	border:1px solid #E5E5E5;
}
.question-option-list li.on{
	border:1px solid #0091E8;
}
.question-option-list li .qol-left{
	display:block;
	float:left;
	height:42px;
	line-height:42px;
	width:42px;
	text-align:center;
	font-size:20px;
	cursor:pointer;
	background-color:#E5E5E5;
}
.question-option-list li .qol-left.on{
	background-color:#0091E8;
	color:#FFFFFF;
}
.question-option-list li .qol-right{
	overflow:hidden;
	padding:0px;
}
.question-option-list li .qol-text{
	border:none;
	height:42px;
	padding:0 2%;
	width:100%;
}
.question-option-list li .qol-text:focus{
	background-color:#FDFDFD
}
.question-option-list li .qol-del-btn{
	position:absolute;
	right:-25px;
	top:11px;
	height:20px;
	line-height:20px;
	width:20px;
	text-align:center;
	cursor:pointer;
	background-color:#dd0000;
	color:#FFFFFF;
}
.question-option-list li .qol-del-btn i{
	font-size:13px;
}

/*小题目列表*/
.small-question-add{
	text-align:center;
	padding-bottom:5px;
}
.small-question-one{
	width:90%;
	margin:20px auto 0;
	border:1px solid #E5E5E5;
}
.small-question-title{
	font-weight:normal;
	height:32px;
	line-height:32px;
	padding:0 10px;
	background-color:#FAFAFA;
	border-bottom:1px dotted #E5E5E5;
}
.small-question-title span{
	float:left;
}
.small-question-title i{
	float:right;
	font-size:13px;
	cursor:pointer;
	font-weight:bold;
	color:#999;
}
.small-question-title i:hover{
	color:#DD0000;
}

/*小题目列表*/
.big-question-title{
	font-size:16px;
	color:#333333;
}
.big-question-content{
	margin-top:5px;
	line-height:22px;
	padding-bottom:15px;
}
.small-question-list{
	margin-bottom:15px;
	border:1px solid #EEEEEE;
}
.small-question-list .sql-answer-title{
	font-weight:normal;
	height:32px;
	line-height:32px;
	padding:0 10px;
	background-color:#FAFAFA;
	border-bottom:1px dotted #E5E5E5;
}
.question-add-info{
	height:30px;
	line-height:30px;
	text-align:right;
	color:#999999;
}
.question-add-info em{
	padding:0 5px;
	color:#FF4400;
}
.small-question-list:last-child{
	margin-bottom:0;
}
.small-question-list .sql-number{
	height:30px;
	line-height:30px;
	margin-left:10px;
	float:left;
	line-height:28px;
	font-size:16px;
	color:#007fcc;
}
.small-question-list .sql-right{
	overflow:hidden;
	padding:0px;
	line-height:24px;
}
.small-question-list .sql-question-title{
	font-size:16px;
	color:#333333;
}
.small-question-list .sql-question-content{
	margin-top:5px;
	line-height:22px;
	padding-bottom:15px;
}
.small-question-list .sql-answer-list li{
	overflow:hidden;
	line-height:22px;
	padding:5px 0;
}
.small-question-list .sql-answer-list .sql-answer-left{
	float:left;
	text-align:center;
	margin-right:5px;
}
.small-question-list .sql-answer-list .sql-answer-right{
	overflow:hidden;
}
.small-question-list .sql-answer-txt{
	margin-top:10px;
	color:#090;
}

/*今日语法*/
.today-grammar-editor{
	position:absolute;
	top:15px;
	bottom:47px;
	left:15px;
	right:15px;
}
.today-grammar-editor-bottom{
	position:absolute;
	bottom:15px;
